enum Permission {
ADMIN
USER
QUESTIONUPDATE
QUESTIONCREATE
QUESTIONDELETE
COMMENTCREATE
COMMENTUPDATE
COMMENTDELETE
PERMISSIONUPDATE
}



type User {
  id: ID! @id
  name: String!
  email: String! @unique
  displayName: String! @unique
  location: String
  aboutMe: String
  industry: String
  categories: String
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Item {
id: ID! @id
tag: String!
title: String!
description: String!
createAt: DateTime!
updatedAt: DateTime!
}

type Post {
id: ID! @id
tag: String!
title: String!
description: String!
createAt: DateTime!
updatedAt: DateTime!
}
